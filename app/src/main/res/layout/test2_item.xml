<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/recycleImg"
        android:layout_width="150dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/main_00"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/recycleImg"
        app:layout_constraintEnd_toEndOf="@id/recycleImg"
        android:src="@drawable/ic_star_black"
        android:background="#ffffff"
        />
    <TextView
        android:id="@+id/recycleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALEXANDER WANG"
        android:textStyle="bold"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/recycleImg"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/recycleDescipt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스"
        android:textSize="8dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/recycleTitle"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>